  </padding>
  <Label fx:id="id" alignment="CENTER" prefWidth="24.0" style="-fx-font-size: 16; -fx-font-weight: bold;" textOverrun="CLIP">
      <HBox.margin>
         <Insets right="5.0" />
      </HBox.margin>
  </Label>
   <HBox alignment="CENTER_LEFT" prefWidth="200.0">
      <padding>
         <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
      </padding>
      <children> 
        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
          <Label fx:id="title" style="-fx-font-size: 14; -fx-font-weight: bold;" text="title" wrapText="true" />
          <Label fx:id="description" text="description" textFill="#666666" wrapText="true" />
        </VBox>
         <VBox alignment="TOP_CENTER" minWidth="-Infinity" prefWidth="18.0">
            <children>
               <Label fx:id="done" alignment="CENTER" prefHeight="18.0" prefWidth="18.0" style="-fx-border-color: #ddd;" text="âœ”" />
               <Region VBox.vgrow="ALWAYS" />
               <Label fx:id="type" alignment="CENTER" prefHeight="18.0" prefWidth="18.0" text="T" />
            </children>
         </VBox>
      </children>
   </HBox>
</fx:root>
