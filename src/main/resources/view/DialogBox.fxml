<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<!-- Solution below adapted from
https://se-education.org/guides/tutorials/javaFxPart4.html#javafx-tutorial-part-4-using-fxml -->
<fx:root alignment="TOP_RIGHT" maxHeight="Infinity" maxWidth="Infinity" prefHeight="30.0" prefWidth="600.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true" />
        <ImageView fx:id="displayPicture" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
    </padding>
</fx:root>
