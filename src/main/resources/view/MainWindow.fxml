<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="MainWindow" minHeight="-Infinity"
            maxHeight="-Infinity" minWidth="-Infinity" maxWidth="-Infinity" prefHeight="600" prefWidth="400">
    <VBox>
        <ScrollPane fx:id="scrollPane" prefHeight="568">
            <VBox fx:id="dialogContainer" prefWidth="380"/>
        </ScrollPane>

        <HBox>
            <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="32" prefWidth="324"
                       AnchorPane.bottomAnchor="1.0"/>
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput"
                    prefHeight="32" prefWidth="76" text="Send"/>
        </HBox>
    </VBox>
</AnchorPane>
