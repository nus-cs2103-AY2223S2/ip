<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="duke.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefHeight="557.0" prefWidth="400.0" VBox.vgrow="ALWAYS" fitToWidth="true">
            <content>
                <VBox fx:id="dialogContainer" maxHeight="Infinity" prefWidth="588.0" />
            </content>
        </ScrollPane>
        <HBox alignment="CENTER">
            <children>
                <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="41.0" prefWidth="360.0" />
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="41.0" prefWidth="76.0" text="Send" />
            </children>
            <padding>
                <Insets top="5.0" bottom="5.0" left="5.0" right="5.0" />
            </padding>
        </HBox>
    </children>
</VBox>